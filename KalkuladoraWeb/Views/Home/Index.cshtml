<html>
    <head>
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

        <!-- jQuery library -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

        <meta name="viewport" content="width=device-width, initial-scale=1.0">


        <style>
            td > button {
                width: 100%;
                height: 100%;
                font-size: 25px !important;
            }
            td {
                min-width: 80px;
                height: 80px;
            }
            textarea {
                font-size: 40px !important;
            }
            table {
                font-size: 50px;
                max-width: 400px;
                max-height: 500px;
            }
        </style>
        <script>
            var n1 = 0;
            var n2 = 0;
            var st = 0;
            $('body').on('click', 'button',
                function() {
                    let val = $(this).text();
                    let textarea = $('textarea');

                    if (val == 'C') {
                        textarea.val('0');
                        return;
                    }
                    if (val == '=') {
                        $.post("/Home/Calc", { input: textarea.val() }, function (data) {
                            textarea.val(data);
                        })
                    }
                    if (textarea.val() == '0') {
                        textarea.val('');
                    }
                    if (IsMathOperator(val) || IsNumber(val)) {
                        textarea.val(textarea.val() + val);
                    }
                }
            );
            function IsMathOperator(op) { return op == '+' || op == '−' || op == '×' || op == '÷' }
            function IsNumber(n) { return parseInt(n).toString() != 'NaN'; }
        </script>
    </head>
    <body>
        <div class="container">
            <table class="table table-borderless">
                <thead>
                    <tr>
                        <th colspan="4" class="text-right calc-panel">
                            <textarea class="form-control" rows="2" readonly>0</textarea>
                        </th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    <tr>
                        <td><button class="btn btn-outline-warning">+</button></td>
                        <td><button class="btn btn-outline-primary">1</button></td>
                        <td><button class="btn btn-outline-primary">2</button></td>
                        <td><button class="btn btn-outline-primary">3</button></td>
                    </tr>
                    <tr>
                        <td><button class="btn btn-outline-warning">−</button></td>
                        <td><button class="btn btn-outline-primary">4</button></td>
                        <td><button class="btn btn-outline-primary">5</button></td>
                        <td><button class="btn btn-outline-primary">6</button></td>
                    </tr>
                    <tr>
                        <td><button class="btn btn-outline-warning">×</button></td>
                        <td><button class="btn btn-outline-primary">7</button></td>
                        <td><button class="btn btn-outline-primary">8</button></td>
                        <td><button class="btn btn-outline-primary">9</button></td>
                    </tr>
                    <tr>
                        <td><button class="btn btn-outline-warning">÷</button></td>
                        <td><button class="btn btn-outline-danger">C</button></td>
                        <td><button class="btn btn-outline-primary">0</button></td>
                        <td><button class="btn btn-outline-warning">=</button></td>
                    </tr>
                    <tr>
                        <td colspan="100"><h5>Created with ❤️ by Micael L.</h5></td>
                    </tr>
                    <tr>
                        <td colspan="100"><h6>WARNING: It has some 🐜</h6></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </body>
</html>
